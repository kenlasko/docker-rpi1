{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":rebaseStalePrs",
    ":enablePreCommit"
  ],
  "enabledManagers": [
    "docker-compose"
  ],

  "hostRules": [
    {
      "hostType": "docker",
      "matchHost": "docker.io",
      "username": "kenlasko",
      "password": "{{ secrets.DOCKER_CREDS }}"
    }
  ],
  "packageRules": [
    {
      "matchManagers": [
        "docker-compose"
      ],
      "matchUpdateTypes": [
        "minor", 
        "patch",
        "digest"
      ],
      "automerge": true,
      "automergeType": "branch",
      "ignoreTests": true
    }
  ]
}
